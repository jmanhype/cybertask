# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Test Database (use a separate test database)
DATABASE_URL="postgresql://username:password@localhost:5432/cybertask_test?schema=public"

# JWT Configuration
JWT_SECRET="test_jwt_secret_key_for_testing_32_chars_min"
JWT_REFRESH_SECRET="test_refresh_secret_key_for_testing_32_chars_min"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Rate Limiting (disabled for tests)
RATE_LIMIT_WINDOW_MS=900000

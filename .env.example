# CyberTask Environment Configuration

# ========================================
# APPLICATION SETTINGS
# ========================================
NODE_ENV=development
PORT=3000
VERSION=latest

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL Database
POSTGRES_DB=cybertask
POSTGRES_USER=cybertask
POSTGRES_PASSWORD=secure_password_change_me
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}

# ========================================
# CACHE CONFIGURATION
# ========================================
# Redis Cache
REDIS_PASSWORD=redis_secure_password
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters

# Cookie Settings
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# ========================================
# CORS & NETWORKING
# ========================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# ========================================
# API CONFIGURATION
# ========================================
# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# API URLs
API_URL=http://localhost:3001
VITE_API_URL=http://localhost:3001

# ========================================
# LOGGING & MONITORING
# ========================================
LOG_LEVEL=info
ENABLE_MONITORING=false

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
VITE_SENTRY_DSN=

# ========================================
# DOCKER CONFIGURATION
# ========================================
DOCKER_REGISTRY=ghcr.io/your-username
COMPOSE_PROJECT_NAME=cybertask

# ========================================
# DEVELOPMENT TOOLS
# ========================================
# Database Tools
REDIS_COMMANDER_PASSWORD=admin123

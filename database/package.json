{
  "name": "@cybertask/database",
  "version": "1.0.0",
  "description": "CyberTask PostgreSQL database with Prisma ORM and AI integration",
  "main": "prisma/seed.ts",
  "scripts": {
    "db:setup": "./scripts/setup.sh",
    "db:migrate": "./scripts/migrate.sh migrate",
    "db:seed": "npx prisma db seed",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed",
    "db:backup": "./scripts/backup.sh",
    "db:restore": "./scripts/restore.sh interactive",
    "db:status": "./scripts/migrate.sh status",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "db:format": "npx prisma format",
    "db:validate": "npx prisma validate",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "type-check": "tsc --noEmit"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "bcryptjs": "^2.4.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.8.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "cybertask",
    "database",
    "postgresql",
    "prisma",
    "ai",
    "claude-flow",
    "task-management",
    "project-management"
  ],
  "author": "CyberTask Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cybertask/database"
  },
  "bugs": {
    "url": "https://github.com/cybertask/issues"
  },
  "homepage": "https://github.com/cybertask#readme"
}
# Staging Environment Configuration for CyberTask

# Database Configuration
DATABASE_URL=postgresql://cybertask:cybertask_staging_pass@postgres:5432/cybertask_staging
POSTGRES_DB=cybertask_staging
POSTGRES_USER=cybertask
POSTGRES_PASSWORD=cybertask_staging_pass

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis_staging_pass

# Authentication & Security
JWT_SECRET=your-staging-jwt-secret-key-here-256-bits-long
JWT_REFRESH_SECRET=your-staging-refresh-secret-key-here-256-bits
SESSION_SECRET=your-staging-session-secret-key-here-256-bits

# Application Configuration  
NODE_ENV=staging
PORT=3001
API_URL=http://localhost:3001
CORS_ORIGIN=http://localhost:8080

# Frontend Configuration
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001
VITE_VERSION=staging

# Email Configuration (Mock for staging)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
SMTP_FROM=noreply@cybertask.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=
VITE_SENTRY_DSN=

# Health Check
HEALTH_CHECK_PATH=/health
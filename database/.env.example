# Database Configuration
DATABASE_URL="postgresql://cybertask_user:cybertask_pass@localhost:5432/cybertask"
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="cybertask"
DB_USER="cybertask_user"
DB_PASSWORD="cybertask_pass"

# PostgreSQL Admin User (for setup)
POSTGRES_USER="postgres"

# Application Configuration
NODE_ENV="development"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Security Settings
BCRYPT_ROUNDS="12"
SESSION_TIMEOUT="24h"
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_DURATION="15m"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@cybertask.ai"

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx,txt,md"
THUMBNAIL_SIZE="150x150"

# Claude API Configuration (optional)
ANTHROPIC_API_KEY="your-anthropic-api-key"
CLAUDE_MODEL="claude-3-5-sonnet-20241022"
CLAUDE_MAX_TOKENS="4096"

# Redis Configuration (optional - for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_KEY_PREFIX="cybertask:"

# Storage Configuration
STORAGE_PROVIDER="local"  # local, s3, gcs
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
S3_BUCKET=""

# Monitoring and Logging
LOG_LEVEL="info"
LOG_FORMAT="json"
SENTRY_DSN=""
NEW_RELIC_LICENSE_KEY=""

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS="100"
API_RATE_LIMIT_WINDOW="1h"
API_RATE_LIMIT_MAX_REQUESTS="1000"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_METHODS="GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"

# Webhook Configuration
WEBHOOK_SECRET="your-webhook-secret"
GITHUB_WEBHOOK_SECRET=""
SLACK_WEBHOOK_URL=""

# Feature Flags
ENABLE_ANALYTICS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_FILE_UPLOADS="true"
ENABLE_REAL_TIME="true"
ENABLE_AI_FEATURES="true"

# Backup Configuration
BACKUP_RETENTION_DAYS="30"
BACKUP_COMPRESS="true"
BACKUP_S3_UPLOAD="false"
BACKUP_S3_BUCKET=""

# Development Settings
DEBUG="false"
PRISMA_DEBUG="false"
DATABASE_LOGGING="false"
SEED_DATABASE="true"

# Production Security Headers
HELMET_CSP_ENABLED="true"
HELMET_HSTS_ENABLED="true"
HELMET_NOSNIFF_ENABLED="true"
HELMET_FRAME_OPTIONS="DENY"

# SSL/TLS Configuration (Production)
SSL_CERT_PATH=""
SSL_KEY_PATH=""
SSL_CA_PATH=""
FORCE_SSL="false"